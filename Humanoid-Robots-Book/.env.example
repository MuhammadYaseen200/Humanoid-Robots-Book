# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Backend API URL (REQUIRED)
# Development: http://localhost:8000
# Production: https://your-api-domain.com
VITE_API_URL=http://localhost:8000

# Application Environment (REQUIRED)
# Options: development, production
# - development: Uses localStorage for JWT tokens (easier debugging)
# - production: Uses httpOnly cookies for JWT tokens (XSS protection)
VITE_ENV=development

# Application Metadata
VITE_APP_NAME=Physical AI & Humanoid Robotics Textbook
VITE_APP_VERSION=1.0.0

# Feature Flags (Optional)
# Enable/disable optional features
VITE_ENABLE_PROFILE_MANAGEMENT=true
VITE_ENABLE_PASSWORD_RESET=false

# Analytics (Optional)
# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
