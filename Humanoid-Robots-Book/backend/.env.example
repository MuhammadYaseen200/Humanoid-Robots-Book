# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Authentication Secret (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be at least 32 characters for secure JWT signing
AUTH_SECRET=your-secret-key-here-minimum-32-characters

# Database Configuration (REQUIRED)
# Neon Postgres connection string
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/your-database?sslmode=require

# CORS Origins (REQUIRED)
# Comma-separated list of allowed frontend origins
# Development: http://localhost:3000
# Production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Environment
# Options: development, production
ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Rate Limiting
# Requests per minute per IP for authentication endpoints
RATE_LIMIT_AUTH=10

# JWT Configuration
# Token expiration in seconds (86400 = 24 hours)
JWT_EXPIRATION=86400

# Email Service (OPTIONAL - for password reset feature)
# SendGrid API Key or SMTP credentials
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=INFO

# Password Reset Token Secret (OPTIONAL)
# Separate secret for password reset tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTH_SECRET_RESET=your-reset-secret-key-here-minimum-32-characters
